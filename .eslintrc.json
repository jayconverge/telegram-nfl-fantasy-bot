{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "env": {
    "jest/globals": true
  },
    "plugins": [
    "@typescript-eslint",
    "sonarjs",
    "jest"
  ],
  "extends": [
    "airbnb-typescript/base",
    "plugin:sonarjs/recommended",
    "plugin:jest/all",
    "plugin:import/recommended"
  ],
  "parserOptions": {
    "project": "tsconfig.json"
  },
  "rules": {
    "class-methods-use-this": 0,
    "jest/require-hook": 0
  }
}
